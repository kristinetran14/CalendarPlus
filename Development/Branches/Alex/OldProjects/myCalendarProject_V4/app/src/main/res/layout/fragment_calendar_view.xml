<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sampleReference.BaseActivity"
    android:background="#fff">

    <com.alamkanak.weekview.WeekView
        android:id="@+id/weekView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:eventTextColor="@android:color/white"
        app:showNowLine = "true"
        app:nowLineColor = "@color/colorPrimaryDark"
        app:textSize="14sp"
        app:hourHeight="40dp"
        app:headerColumnPadding="8dp"
        app:headerColumnTextColor="@color/time_color"
        app:headerRowPadding="12dp"
        app:columnGap="8dp"
        app:noOfVisibleDays="3"
        app:hourSeparatorColor="@color/colorWhite"
        app:headerRowBackgroundColor="@color/toolbar"
        android:layout_marginTop="@dimen/nav_bar_height_short"
        app:dayBackgroundColor="#05000000"
        app:todayBackgroundColor="#1848adff"
        app:headerColumnBackground="#ffffffff"
        app:todayHeaderTextColor="@color/accent" />

</RelativeLayout>
